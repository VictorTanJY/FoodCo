<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restaurants</title>
    <!-- Google material icons -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
    />
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include("partials/navbar.ejs", {isAuthenticated, current: "profile"}) %>

    <header class="blue-container main-header p-5">
      <div>
        <h1>About You</h1>
      </div>
    </header>

    <section class="white-container content-layout">
      <div class="mb-5">
        <%- include("partials/messages.ejs") %>
        <h2 class="mb-3">Your Information</h2>
        <form class="side-form p-0" action="/profile" method="POST">
          <div class="form-input-wrapper">
            <i class="material-icons">perm_identity</i>
            <div class="d-flex justify-content-between">
              <input
                type="text"
                name="first_name"
                required
                placeholder="First name"
                value="<%= typeof user.first_name != 'undefined' ? user.first_name : ''%>"
              />
              <input
                type="text"
                name="last_name"
                required
                placeholder="Last name"
                value="<%= typeof user.last_name != 'undefined' ? user.last_name : ''%>"
              />
            </div>
          </div>
          <div class="form-input-wrapper">
            <i class="material-icons">face</i>
            <input
              type="text"
              name="username"
              placeholder="Username"
              required
              value="<%= typeof user.username != 'undefined' ? user.username : ''%>"
            />
          </div>
          <div class="form-input-wrapper">
            <i class="material-icons">home</i>
            <input
              type="text"
              name="address"
              placeholder="Address"
              required
              value="<%= typeof user.address != 'undefined' ? user.address : ''%>"
            />
          </div>
          <div class="form-input-wrapper">
            <select name="gender" required>
              <option
                value="Male"
                selected="<%= typeof user.gender == 'Male' ? true : false%>"
              >
                Male
              </option>
              <option
                value="Female"
                selected="<%= typeof user.gender == 'Female' ? true : false%>"
              >
                Female
              </option>
            </select>
          </div>
          <div class="form-input-wrapper">
            <i class="material-icons">phone</i>
            <input
              type="text"
              name="mobile_number"
              required
              placeholder="Mobile number"
              value="<%= typeof user.mobile_number != 'undefined' ? user.mobile_number : ''%>"
            />
          </div>
          <div class="form-input-wrapper">
            <i class="material-icons">mail_outline</i>
            <input
              type="text"
              name="email"
              required
              placeholder="Email"
              value="<%= typeof user.email != 'undefined' ? user.email : ''%>"
            />
          </div>
          <div class="form-input-wrapper">
            <i class="material-icons">lock</i>
            <input
              type="password"
              name="password"
              required
              placeholder="Password"
              value="<%= typeof user.password != 'undefined' ? user.password : ''%>"
            />
          </div>
          <div>
            <input type="submit" class="primary-btn small-btn" value="Update" />
          </div>
        </form>
      </div>
      <div>
        <h2 class="mb-3">Actions</h2>
        <button
          class="secondary-btn"
          type="button"
          data-toggle="modal"
          data-target="#deleteModal"
        >
          Deactivate account
        </button>
      </div>
    </section>

    <!-- Modal -->
    <div class="modal" tabindex="-1" role="dialog" id="deleteModal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Confirm deletion?</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>Deletion is irreversible.</p>
          </div>
          <form class="modal-footer" action="/profile-delete" method="POST">
            <button type="button" class="primary-btn" data-dismiss="modal">
              Cancel
            </button>
            <input type="submit" class="secondary-btn" value="Delete" />
          </form>
        </div>
      </div>
    </div>
    <!-- End of modal -->

    <%- include("partials/footer.ejs") %>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
    <script src="js/global.js"></script>
  </body>
</html>
